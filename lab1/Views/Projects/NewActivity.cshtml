@using TRS.Models
@model ActivityEntry
@{
    ViewData["Title"] = "New activity";
}

<div class="text-center">
    <h1 class="display-4">@ViewData["Title"]</h1>
    <h2>@ViewData["Code"]</h2>
</div>

<form method = "post">
    @* @Html.LabelFor(model => model.code) *@
    @* @Html.DropDownListFor(model => model.code, ViewData["Projects"]) *@
    @Html.HiddenFor(model => model.code)
    <div class = "form-group row">
        @Html.LabelFor(model => model.subcode)
        @Html.DropDownListFor(model => model.subcode, new SelectList((List<string>)ViewData["Subactivities"]))
    </div>
    <div class = "form-group row">
        @Html.LabelFor(model => model.date)
        @Html.TextBoxFor(model => model.date, "{0:d}", new {type = "date", min = ViewData["FirstDay"], max = ViewData["LastDay"]})
    </div>
    <div class = "form-group row">
        @Html.LabelFor(model => model.time)
        @Html.TextBoxFor(model => model.time)
    </div>
    <div class = "form-group row">
        @Html.LabelFor(model => model.description)
        @Html.TextBoxFor(model => model.description)
    </div>

    <div class = "form-group row">
        <button type = "submit">Submit</button>
    </div>
</form>