@using TRS.Models
@model Project
@{
    ViewData["Title"] = "New project";
    string labelClass = "col-sm-1";
    string textBoxClass = "col-sm-4";
}

<div class="text-center">
    <h1 class="display-4">@ViewData["Title"]</h1>
</div>

<form method = "post">

    <div class = "form-group row">
        <div class = @labelClass>@Html.LabelFor(model => model.code)</div>
        <div class = @textBoxClass>@Html.TextBoxFor(model => model.code)</div>
    </div>

    <div class = "form-group row">
        <div class = @labelClass>@Html.LabelFor(model => model.name)</div>
        <div class = @textBoxClass>@Html.TextBoxFor(model => model.name)</div>
    </div>

    <div class = "form-group row">
        <div class = @labelClass>@Html.LabelFor(model => model.budget)</div>
        <div class = @textBoxClass>@Html.TextBoxFor(model => model.budget)</div>
    </div>

    <div class = "form-group row">
        <div class = @labelClass>@Html.Label("subactivity")</div>
        <div class = @textBoxClass>@Html.TextBox("subactivity", "", new { name = "subactivity"})</div>
        <div><input type = "submit" name = "button" value = "+"/></div>
    </div>

    
    @for (int i = 0; i < Model.subactivities.Count; ++i)
    {
        @Html.HiddenFor(model => model.subactivities[i])
    }

    @foreach (var subactivity in Model.subactivities)
    {
        <div class = "form-group row">
            @subactivity
            @* <input type = "submit" name = "button" value = "-"/> *@
        </div>
    } 
    

    <div class = "form-group row">
        <input type = "submit" name = "button" value = "Submit"/>
    </div>

</form>