@using TRS.Models
@model ActivityEntry
@{
    ViewData["Title"] = "New activity";
}

<div class="text-center">
    <h1 class="display-4">@ViewData["Title"]</h1>
    <h2>@ViewData["Code"]</h2>
</div>

<div class = "form-group">
    @* @Html.LabelFor(model => model.code) *@
    @* @Html.DropDownListFor(model => model.code, ViewData["Projects"]) *@
    <div class = "form-group row">
        @Html.LabelFor(model => model.subcode)
        @Html.DropDownListFor(model => model.subcode, new SelectList((List<string>)ViewData["Subactivities"]))
    </div>
    <div class = "form-group row">
        @Html.LabelFor(model => model.date)
    </div>
    <div class = "form-group row">
        @Html.LabelFor(model => model.time)
    </div>
    <div class = "form-group row">
        @Html.LabelFor(model => model.description)
    </div>

    <div class = "form-group row">
        <input type = "submit" value = "Submit"/>
    </div>
</div>