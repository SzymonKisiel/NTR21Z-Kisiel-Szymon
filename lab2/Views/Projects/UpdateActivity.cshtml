@using TRS.Models
@model EditViewModel
@{
    ViewData["Title"] = "New activity";
}


<div class="text-center">
    <h1 class="display-4">@ViewData["Title"]</h1>
    <h2>@ViewData["Code"]</h2>
    <h2>@ViewData["DefaultDay"]</h2>
</div>

@* @{
    Html.RenderPartial("Activity", Model.activity);
} *@

<form method = "post">
    @Html.HiddenFor(model => model.oldDate)
    @Html.HiddenFor(model => model.oldCode)
    @Html.HiddenFor(model => model.activity.code)
    <div class = "form-group row">
        @Html.LabelFor(model => model.activity.subcode)
        @Html.DropDownListFor(model => model.activity.subcode, new SelectList((List<string>)ViewData["Subactivities"]))
        @Html.ValidationMessageFor(model => model.activity.subcode)
    </div>
    <div class = "form-group row">
        @Html.LabelFor(model => model.activity.date)
        @Html.TextBoxFor(model => model.activity.date, "{0:yyyy-MM-dd}", new {type = "date", min = ViewData["FirstDay"], max = ViewData["LastDay"]})
        @Html.ValidationMessageFor(model => model.activity.date)
    </div>
    <div class = "form-group row">
        @Html.LabelFor(model => model.activity.time)
        @Html.TextBoxFor(model => model.activity.time)
        @Html.ValidationMessageFor(model => model.activity.time)
    </div>
    <div class = "form-group row">
        @Html.LabelFor(model => model.activity.description)
        @Html.TextBoxFor(model => model.activity.description)
        @Html.ValidationMessageFor(model => model.activity.description)
    </div>

    <div class = "form-group row">
        <button type = "submit">Submit</button>
    </div>
</form>