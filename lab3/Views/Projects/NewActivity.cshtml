@using TRS.Models
@model ActivityEntry
@{
    ViewData["Title"] = "New activity";
}

<div class="text-center">
    <h1 class="display-4">@ViewData["Title"]</h1>
    <h2>@ViewData["Code"]</h2>
</div>

<form method = "post">
    @* @Html.LabelFor(model => model.code) *@
    @* @Html.DropDownListFor(model => model.code, ViewData["Projects"]) *@
    @Html.HiddenFor(model => model.Code)
    <div class = "form-group row">
        @Html.LabelFor(model => model.Subcode)
        @Html.DropDownListFor(model => model.Subcode, new SelectList((List<string>)ViewData["Subactivities"]))
        @Html.ValidationMessageFor(model => model.Subcode)
    </div>
    <div class = "form-group row">
        @Html.LabelFor(model => model.Date)
        @Html.TextBoxFor(model => model.Date, "{0:d}", new {type = "date", min = ViewData["FirstDay"], max = ViewData["LastDay"]})
        @Html.ValidationMessageFor(model => model.Date)
    </div>
    <div class = "form-group row">
        @Html.LabelFor(model => model.Time)
        @Html.TextBoxFor(model => model.Time)
        @Html.ValidationMessageFor(model => model.Time)
    </div>
    <div class = "form-group row">
        @Html.LabelFor(model => model.Description)
        @Html.TextBoxFor(model => model.Description)
        @Html.ValidationMessageFor(model => model.Description)
    </div>

    <div class = "form-group row">
        <button type = "submit">Submit</button>
    </div>
</form>